        android:id="@+id/three"
        android:layout_width="80dp"
        android:layout_height="56dp"
        android:text="Three"
        android:textColor="#fff"
        android:background="#555"
        android:textSize="18sp"/>


        <Button
        android:id="@+id/four"
        android:layout_width="80dp"
        android:layout_height="56dp"
        android:text="Four"
        android:textColor="#fff"
        android:background="#777"
        android:textSize="18sp"/>
